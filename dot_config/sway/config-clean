# gaps
default_border none
hide_edge_borders --i3 both
smart_borders off
smart_gaps on
gaps inner 4
gaps outer -4

exec dbus-update-activation-environment --systemd DBUS_SESSION_BUS_ADDRESS DISPLAY XAUTHORITY
exec mako

gnome_schema="org.gnome.desktop.interface"
gtk_theme="$(grep 'gtk-theme-name' ${XDG_CONFIG_HOME:-$HOME/.config}/gtk-3.0/settings.ini | cut -d'=' -f2)"
icon_theme="$(grep 'gtk-icon-theme-name' "${XDG_CONFIG_HOME:-$HOME/.config}/gtk-3.0/settings.ini | cut -d'=' -f2)"
cursor_theme="$(grep 'gtk-cursor-theme-name' ${XDG_CONFIG_HOME:-$HOME/.config}/gtk-3.0/settings.ini | cut -d'=' -f2)"
font_name="$(grep 'gtk-font-name' ${XDG_CONFIG_HOME:-$HOME/.config}/gtk-3.0/settings.ini | cut -d'=' -f2)"
gsettings set "$gnome_schema" gtk-theme "$gtk_theme"
gsettings set "$gnome_schema" icon-theme "$icon_theme"
gsettings set "$gnome_schema" cursor-theme "$cursor_theme"
gsettings set "$gnome_schema" font-name "$font_name"
